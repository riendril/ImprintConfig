&sk {
    quick-release;
    lazy;
    release-after-ms = <500>;
};

/ {
    chosen { zmk,matrix-transform = &imprint_function_row; };

    behaviors {
        layer_hold_or_toggle: layer_hold_or_toggle {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_HOLD_OR_TOGGLE";
            bindings = <&mo>, <&tog>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        caps_word_tap: caps_word_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "CAPS_WORD_TAP";
            bindings = <&kp>, <&caps_word>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "hold-preferred";
        };

        hrm_left: hrm_left {
            compatible = "zmk,behavior-hold-tap";
            label = "HRM_LEFT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <175>;
            tapping-term-ms = <280>;
            require-prior-idle-ms = <120>;
            flavor = "balanced";
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 42 43 44 45 46 47 54 55 56 57 58 59 62 63 69 75 64 65 66 67 68 69 70 71 72 73 74 75 48 36 24>;
            hold-trigger-on-release;
        };

        hrm_right: hrm_right {
            compatible = "zmk,behavior-hold-tap";
            label = "HRM_RIGHT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <175>;
            tapping-term-ms = <280>;
            require-prior-idle-ms = <120>;
            flavor = "balanced";
            hold-trigger-on-release;
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41 48 49 50 51 52 53 60 61 64 65 64 65 66 67 68 69 70 71 72 73 74 75 59>;
        };

        chord_1_the: chord_1_the {
            compatible = "zmk,behavior-mod-morph";
            label = "CHORD_1_THE";
            bindings = <&token_1_the>, <&token_2_The>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        hrl_right: hrl_right {
            compatible = "zmk,behavior-hold-tap";
            label = "HRL_RIGHT";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <175>;
            tapping-term-ms = <280>;
            require-prior-idle-ms = <120>;
            flavor = "balanced";
            hold-trigger-on-release;
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41 48 49 50 51 52 53 60 61 64 65 64 65 66 67 68 69 70 71 72 73 74 75 59>;
        };
    };

    combos {
        compatible = "zmk,combos";

        toggle_text-input-layer {
            bindings = <&tog 1>;
            key-positions = <52 55>;
        };

        chord_1 {
            bindings = <&chord_1_the>;
            key-positions = <39 44>;
        };

        combo_shift {
            bindings = <&caps_word>;
            key-positions = <48 59>;
        };

        gaming-toggle {
            bindings = <&tog 7>;
            key-positions = <51 56>;
        };
    };

    macros {
        token_1_the: token_1_the {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_tap>,
                <&kp T &kp H &kp E &kp SPACE &none>,
                <&macro_pause_for_release>;

            label = "TOKEN_1_THE";
            wait-ms = <0>;
            tap-ms = <0>;
        };

        token_2_The: token_2_The {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_tap>, <&kp LS(T) &kp H &kp E &kp SPACE>;

            label = "TOKEN_2_THE";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default-layer {
